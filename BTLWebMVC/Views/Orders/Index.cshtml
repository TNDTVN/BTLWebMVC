@model IEnumerable<BTLWebMVC.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layoutmanager.cshtml";
}




<div class="content-wrapper">
    <div style="margin:0.4cm;">

        <h2 class="mb-4">Danh sách đơn hàng</h2>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead class="thead-light" style="white-space: nowrap;">
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Tên khách hàng</th>
                            <th>Nhân viên</th>
                            <th>Ngày đặt</th>
                            <th>Ngày giao</th>
                            <th>Địa chỉ giao</th>
                            <th>Công cụ</th>



                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.OrderID)</td>
                                <td>@Html.DisplayFor(modelItem => item.Customer.ContactName)</td>
                                <td>@(item.Employee.FirstName + " " + item.Employee.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.ShippedDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.ShipAddress)</td>

                                <td>
                                    <a href="@Url.Action("Details", "Orders", new { id = item.CustomerID })" class="btn btn-primary btn-sm">Chi tiết</a>
                                    <a href="@Url.Action("Edit", "Orders", new { id = item.CustomerID })" class="btn btn-info btn-sm">Cập nhập</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>


</div>