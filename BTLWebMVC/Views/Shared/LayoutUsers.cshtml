                            </div>
                            <div class="mb-3">
                                <label for="forgotEmail" class="form-label">Email:</label>
                                <input type="email" id="forgotEmail" class="form-control" placeholder="Nhập email" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Thoát</button>
                        <button type="submit" class="btn btn-primary">Gửi Yêu Cầu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".account_selection a, .menu_selection a").forEach(item => {
                item.addEventListener("click", function (e) {
                    e.preventDefault();
                    const targetId = e.target.closest("a").getAttribute("data-bs-target");
                    if (!targetId) {
                        console.error("Modal target ID not found!");
                        return;
                    }

                    console.log("Opening modal with ID:", targetId);

                    const targetModal = document.querySelector(targetId);
                    if (targetModal) {
                        const bootstrapModal = new bootstrap.Modal(targetModal);
                        bootstrapModal.show();
                    } else {
                        console.error(`Modal with ID "${targetId}" not found in the DOM.`);
                    }
                });
            });
        });
    </script>

