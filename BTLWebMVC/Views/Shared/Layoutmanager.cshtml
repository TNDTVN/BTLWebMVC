<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link rel="stylesheet" href="~/Content/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <link rel="stylesheet" href="~/Content/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/plugins/jqvmap/jqvmap.min.css">
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/Content/plugins/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/Content/plugins/summernote/summernote-bs4.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/spinner.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="@Scripts.Url("~/bundles/jquery")"></script>
    <script src="~/Content/plugins/jquery-ui/jquery-ui.min.js"></script>

    <style>
        .main-sidebar {
            height: 100vh !important;
            display: flex;
            flex-direction: column;
        }

            .main-sidebar .sidebar {
                display: flex;
                flex-direction: column;
                flex-grow: 1;
                height: 100%;
            }

        .nav-sidebar {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .nav-item.logout-item {
            margin-top: auto !important;
            padding-bottom: 15px !important;
        }

        .modal-content {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .modal-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            padding: 1.5rem;
        }

        .modal-title {
            font-weight: 600;
            color: #dc3545;
        }

        .modal-body {
            padding: 1.5rem;
        }

        .modal-footer {
            border-top: 1px solid #dee2e6;
            padding: 1rem;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            transition: background-color 0.2s;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .form-group label {
            font-weight: 500;
        }

        .alert {
            margin-bottom: 1rem;
        }
        .user-panel .image img {
            width: 45px;
            height: 45px;
            object-fit: cover;
            border-radius: 50% !important; /* Quan trọng: đặt thành hình tròn */
            border: 2px solid #dee2e6;
        }

        /* Phần CSS cho trang chỉnh sửa profile */
        .profile-image-container {
            position: relative;
            width: 150px; /* Đặt lại thành vuông */
            height: 150px; /* Đặt lại thành vuông */
            margin-bottom: 1.5rem;
        }

        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50% !important; /* Quan trọng: đặt thành hình tròn */
            border: 4px solid #fff;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .image-preview {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50% !important; /* Quan trọng: đặt thành hình tròn */
            border: 4px solid #007bff;
            display: none;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div id="loading-spinner">
        <div class="spinner"></div>
    </div>
    <script>
        window.addEventListener('load', function () {
            const loadingSpinner = document.getElementById('loading-spinner');
            if (loadingSpinner) {
                loadingSpinner.style.display = 'none';
            }
        });
    </script>

    <div class="wrapper">
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index", "HomeManager")" class="nav-link">
                        <strong>HPH - Cửa hàng thiết bị điện tử</strong>
                    </a>
                </li>
            </ul>
        </nav>

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex  align-items-center">
                    <div class="image">
                        <img src="@Url.Action("Index", "About")"
                             class="img-circle elevation-2"
                             alt="User Image" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block" id="user-fullname">Loading...</a>
                    </div>
                </div>

                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index","HomeManager")" class="nav-link @(ViewBag.CurrentPage == "Dashboard" ? "active" : "")">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Category")" class="nav-link @(ViewBag.CurrentPage == "Category" ? "active" : "")">
                                <i class="nav-icon fas fa-list"></i>
                                <p>Quản lý loại sản phẩm</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Supplier")" class="nav-link @(ViewBag.CurrentPage == "Supplier" ? "active" : "")">
                                <i class="nav-icon fa fa-building"></i>
                                <p>Quản lý nhà cung cấp</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Products")" class="nav-link @(ViewBag.CurrentPage == "Products" ? "active" : "")">
                                <i class="nav-icon fas fa-box"></i>
                                <p>Sản phẩm</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Customers")" class="nav-link @(ViewBag.CurrentPage == "Customers" ? "active" : "")">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Khách hàng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Orders")" class="nav-link @(ViewBag.CurrentPage == "Orders" ? "active" : "")">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>Đơn hàng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Statistics")" class="nav-link @(ViewBag.CurrentPage == "Statistics" ? "active" : "")">
                                <i class="nav-icon fas fa-chart-bar"></i>
                                <p>Thống kê</p>
                            </a>
                        </li>
                        @if (Session["Role"]?.ToString() == "Admin")
                        {
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Employees")" class="nav-link @(ViewBag.CurrentPage == "Employees" ? "active" : "")">
                                    <i class="nav-icon fas fa-user-tie"></i>
                                    <p>Nhân viên</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Accounts")" class="nav-link @(ViewBag.CurrentPage == "Accounts" ? "active" : "")">
                                    <i class="nav-icon fas fa-user-cog"></i>
                                    <p>Tài khoản</p>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a href="@Url.Action("EditProfile", "Employees")" class="nav-link @(ViewBag.CurrentPage == "EditProfile" ? "active" : "")">
                                <i class="nav-icon fas fa-user"></i>
                                <p>Thông tin cá nhân</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link" data-toggle="modal" data-target="#changePasswordModal">
                                <i class="nav-icon fas fa-key"></i>
                                <p>Đổi mật khẩu</p>
                            </a>
                        </li>
                        <li class="nav-item logout-item">
                            <a href="@Url.Action("Logout", "Login")" class="nav-link @(ViewBag.CurrentPage == "Logout" ? "active" : "")">
                                <i class="nav-icon fa-solid fa-right-from-bracket"></i>
                                <p>Đăng xuất</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div>
            @RenderBody()
        </div>

        <footer class="main-footer">
            <strong>Copyright © 2025 HPH - Cửa hàng thiết bị điện tử.</strong> All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>

        <aside class="control-sidebar control-sidebar-dark"></aside>

        <!-- Modal đổi mật khẩu -->
        <div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="changePasswordModalLabel">Đổi mật khẩu</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="changePasswordMessage" class="alert" style="display: none;"></div>
                        <div class="form-group">
                            <label for="oldPassword">Mật khẩu hiện tại</label>
                            <input type="password" class="form-control" id="oldPassword" placeholder="Nhập mật khẩu hiện tại">
                        </div>
                        <div class="form-group">
                            <label for="newPassword">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="newPassword" placeholder="Nhập mật khẩu mới">
                        </div>
                        <div class="form-group">
                            <label for="newReEnterPassword">Xác nhận mật khẩu mới</label>
                            <input type="password" class="form-control" id="newReEnterPassword" placeholder="Xác nhận mật khẩu mới">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-danger" id="confirmChangePassword">Xác nhận</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/plugins/sparklines/sparkline.js"></script>
    <script src="~/Content/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="~/Content/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <script src="~/Content/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/Content/plugins/moment/moment.min.js"></script>
    <script src="~/Content/plugins/daterangepicker/daterangepicker.js"></script>
    <script src="~/Content/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="~/Content/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Content/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Content/dist/js/adminlte.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("Name", "About")',
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        $('#user-fullname').text(response.message);
                    } else {
                        console.error(response.message);
                        $('#user-fullname').text('Unknown User');
                    }
                },
                error: function () {
                    console.error('Lỗi khi lấy tên nhân viên');
                    $('#user-fullname').text('Unknown User');
                }
            });

            // Xử lý đổi mật khẩu
            $('#confirmChangePassword').click(function () {
                var oldPassword = $('#oldPassword').val();
                var newPassword = $('#newPassword').val();
                var newReEnterPassword = $('#newReEnterPassword').val();
                var messageDiv = $('#changePasswordMessage');

                messageDiv.hide(); // Ẩn thông báo trước khi gửi

                $.ajax({
                    url: '@Url.Action("ChangePassword", "Login")',
                    type: 'POST',
                    data: {
                        oldPassword: oldPassword,
                        newPassword: newPassword,
                        newReEnterPassword: newReEnterPassword
                    },
                    success: function (response) {
                        messageDiv.removeClass('alert-success alert-danger');
                        if (response.success) {
                            messageDiv.addClass('alert-success').text(response.message).show();
                            $('#oldPassword, #newPassword, #newReEnterPassword').val(''); // Reset form
                            setTimeout(function () {
                                $('#changePasswordModal').modal('hide');
                                messageDiv.hide();
                            }, 2000); // Đóng modal sau 2 giây
                        } else {
                            messageDiv.addClass('alert-danger').text(response.message).show();
                        }
                    },
                    error: function () {
                        messageDiv.addClass('alert-danger').text('Lỗi khi gửi yêu cầu. Vui lòng thử lại!').show();
                    }
                });
            });

            // Reset form và thông báo khi mở modal
            $('#changePasswordModal').on('show.bs.modal', function () {
                $('#oldPassword, #newPassword, #newReEnterPassword').val('');
                $('#changePasswordMessage').hide();
            });
        });
    </script>
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                alert(@Html.Raw(Json.Encode(TempData["SuccessMessage"])));
                console.log("SuccessMessage: " + @Html.Raw(Json.Encode(TempData["SuccessMessage"])));
            });
        </script>
        TempData["SuccessMessage"] = null;
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <script>
            $(document).ready(function () {
                alert(@Html.Raw(Json.Encode(TempData["ErrorMessage"])));
                console.log("ErrorMessage: " + @Html.Raw(Json.Encode(TempData["ErrorMessage"])));
            });
        </script>
        TempData["ErrorMessage"] = null;
    }
</body>
</html>

@RenderSection("Scripts", required: false)