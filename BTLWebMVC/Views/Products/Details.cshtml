@model BTLWebMVC.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Layoutmanager.cshtml";
}

<div class="content-wrapper">

    <h2>Thông tin chi tiết sản phẩm</h2>

    <div>
        <h4>Product</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Loại sản phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </dd>

            <dt>
                Nhà cung cấp
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Supplier.SupplierName)
            </dd>

            <dt>
                Tên sản phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                Số lượng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.QuantityPerUnit)
            </dd>

            <dt>
                Giá đơn vị
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitPrice)
            </dd>

            <dt>
                Số lượng kho
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitsInStock)
            </dd>

            <dt>
                Số lượng đơn hàng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitsOnOrder)
            </dd>

            <dt>
                Tình trạng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Discontinued)
            </dd>

            <dt>
                Mô tả chi tiết
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</div> 